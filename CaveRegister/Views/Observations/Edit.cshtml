@model CaveRegister.Models.ObservationViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Observed Cave-life at @Model.Observation.VisitHistory.Cave.Name on @Model.Observation.VisitHistory.VistitDate.ToString("yyyy-MM-dd")</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Observation</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Observation.ObservableEntityID)
        @Html.HiddenFor(model => model.Observation.VisitHistoryID)

		<div class="form-group">
			@Html.LabelFor(model => model.Observation.ObservableEntityID, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.Observation.ObservableEntity.Name, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observation.QuantityObservedEstimate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Observation.QuantityObservedEstimate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observation.QuantityObservedEstimate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observation.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Observation.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observation.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Edit", "VisitHistories", new { id = Model.Observation.VisitHistoryID }, new object { })
</div>
