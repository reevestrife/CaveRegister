@model IEnumerable<CaveRegister.Models.Entrance>

@{
	Layout = null;
}

<h2 id="EntranceSection">Entrances</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.id})
</p>
<table class="table">
    <tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.LasEditApplicationUser.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Altitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEditDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
        <td>
            @Html.DisplayFor(modelItem => item.LasEditApplicationUser.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Altitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastEditDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EntranceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EntranceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EntranceID })
        </td>
    </tr>
}

</table>
