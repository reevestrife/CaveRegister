@model CaveRegister.Models.VisitHistoryViewModel

@{
	ViewBag.Title = Model.VisitHistory.Cave.SasaCode + @Model.VisitHistory.Cave.Name +  "Visit Report";
}

<h2>@Model.VisitHistory.Cave.SasaCode @Model.VisitHistory.Cave.Name Visit Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VisitHistory.VisitHistoryID)
        @Html.HiddenFor(model => model.VisitHistory.CaveID)
        
		<div class="form-group">
            @Html.LabelFor(model => model.VisitHistory.VistitDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VisitHistory.VistitDate, new { htmlAttributes = new { @class = "form-control datepicker", value=Model.VisitHistory.VistitDate.ToString("yyyy-MM-dd")} })
                @Html.ValidationMessageFor(model => model.VisitHistory.VistitDate, "", new { @class = "text-danger" })
            </div>
        </div>

		<div class="form-group">
			@Html.LabelFor(model => model.VisitHistory.TripStartTime, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.VisitHistory.TripStartTime, new { htmlAttributes = new { @class = "form-control datepicker" } })
				@Html.ValidationMessageFor(model => model.VisitHistory.TripStartTime, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.VisitHistory.TripEndTime, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.VisitHistory.TripEndTime, new { htmlAttributes = new { @class = "form-control datepicker" } })
				@Html.ValidationMessageFor(model => model.VisitHistory.TripEndTime, "", new { @class = "text-danger" })
			</div>
		</div>

        <div class="form-group">
            @Html.LabelFor(model => model.VisitHistory.MeetReport, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VisitHistory.MeetReport, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VisitHistory.MeetReport, "", new { @class = "text-danger" })
            </div>
        </div>

		<div class="form-group">
			@Html.LabelFor(model => model.SelectedAttendingApplicationUsers, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.ListBoxFor(m => m.SelectedAttendingApplicationUsers, Model.AttendingApplicationUsersSelectList,
				new { @class = "chosen", multiple = "multiple", style = "width: 350px;" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.VisitHistory.Visitors, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.VisitHistory.Visitors, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.VisitHistory.Visitors, "", new { @class = "text-danger" })
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Html.Action("Index", "Observations", new { id = Model.VisitHistory.VisitHistoryID })

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
